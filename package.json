{
  "name": "dawn-testing",
  "version": "1.0.0",
  "description": "Cypress Cucumber tests for CloudJam",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "cypress run",
    "test:report": "cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,charts=true,reportPageTitle='CloudJam DAW Test Report',embeddedScreenshots=true,inlineAssets=true,overwrite=false",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/combined-report.json",
    "report:generate": "marge cypress/reports/combined-report.json --reportDir cypress/reports --inline",
    "report:all": "rm -rf cypress/reports/* && npm run test:report && npm run report:merge && npm run report:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.6",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^13.6.4",
    "cypress-mochawesome-reporter": "^3.6.1",
    "cypress-multi-reporters": "^1.6.0",
    "esbuild": "^0.20.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.{js,ts}"
  }
}
